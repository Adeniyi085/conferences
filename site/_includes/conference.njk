<time class="conf-dates">
  <span class="icon">📆</span>
  {{ conf.data.date | readableDate }}
  {% if conf.data.endDate %}<span class="end-date">
    - {{ conf.data.endDate | readableDate }}</span
  >
  {% endif %}
</time>

<h2 class="conf-title">
  <a href="{{ conf.data.url }}">
    {{ conf.data.title }}
  </a>
</h2>

<address class="conf-location">
  <span class="icon">📍</span>
  {{ conf.data.location }}
</address>

<div class="conf-about">
  {{ conf.templateContent | safe }}
  {% if conf.data.cocUrl %}
  <a href="{{ conf.data.cocUrl }}" class="conf-coc">Code of Conduct</a>
  {% endif %}
</div>

<div class="conf-byline">
  {{ conf.data.byline }}
</div>

<a href="{{ conf.data.url }}" class="conf-link">
  <span class="screen-reader-text">Go to Conference Site</span>
  →
</a>
